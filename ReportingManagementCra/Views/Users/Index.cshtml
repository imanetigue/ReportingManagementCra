@model IEnumerable<User> 
@{
    ViewData["Title"] = "Index";
 }

    <div class="container p-3">
        <div class="row pt-4">
            <div class="col-6">
                <h2 class="text-primary"> Users List</h2>
            </div>
            <div class="col-6 text-end">
                <a asp-controller="Users" asp-action="Index" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> &nbsp; Create New User
                </a>
            </div>
        </div>
        <br /><br />

        <table class="table table-bordered table-striped" style="width:60%" align="center">
            <thead>
                <tr>
                    <th>
                        User Name
                    </th>
                    <th>
                        User Birth Date
                    </th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td width="25%">
                            @obj.FirstName
                        </td>
                        <td width="25%">
                            @obj.LastName
                        </td>
                        <td>
                            <a asp-controller="Users" asp-action="Edit" asp-route-id="@obj.Id"
                           class="btn btn-warning mx-2"> <i class="bi bi-pencil-square"></i> Edit</a>
                        </td>
                        <td>
                            <a asp-controller="Users" asp-action="Delete" asp-route-id="@obj.Id"
                           class="btn btn-danger mx-2"> <i class="bi bi-x-circle"></i> Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
